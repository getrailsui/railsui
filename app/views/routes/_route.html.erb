<div class="overflow-x-auto w-full">
  <div data-railsui-search-target="result"
      data-search-route-value="<%= route[:name].downcase %> <%= route[:reqs].downcase %>" data-search-route-nested="<%= route[:name].present? ? false : true %>">
    <% if route[:name].present? %>
      <div class="grid md:grid-cols-11 text-sm items-start py-6">
        <div class="sm:col-span-5 text-base">
          <% if route[:name].present? %>
            <div class="relative group">
              <button type="button"
          data-controller="railsui-clipboard"
          data-action="click->railsui-clipboard#copy">
                <div class="absolute -left-7 top-1 opacity-0 group-hover:opacity-100 p-1 rounded group-hover:bg-neutral-50/50 dark:group-hover:bg-neutral-700 transition ease-in-out duration-200 size-6 flex items-center justify-center">
                  <%= icon "copy", class: "size-3 fill-current text-neutral-400 dark:text-neutral-100" %>
                </div>
                <div
              data-railsui-clipboard-target="content"
              class="group-hover:text-neutral-600 dark:group-hover:text-neutral-400 font-medium text-lg">
                  <%= route[:name] %><span data-railsui-helper-target="extension">_path</span>
                </div>
              </button>
            </div>
          <% end %>
          <% if route[:verb].present? %>
            <div class="mt-3 inline-flex items-center font-bold px-1 h-5 rounded text-xs -ml-1 <%= route_verb_classes(route[:verb]) %>"><%= route[:verb] %></div>
          <% end %>
        </div>
        <div class="sm:col-span-6 md:pt-0 pt-2">
          <div data-controller="railsui-code" class="mt-5 mb-8 first:mt-0 last:mb-0 bg-gradient-to-br rounded-lg border from-neutral-900 to-neutral-700 border-neutral-700 selection:bg-salmon-500 selection:bg-opacity-25 relative text-base text-white">
            <pre><code data-railsui-code-target="snippet" data-railsui-clipboard-target="content" class="language-bash text-neutral-100"># Path
<%= route[:path].to_param.strip %>

# Controller/Action
<%= route[:reqs].to_param.strip %></code></pre>
          </div>
        </div>
      </div>
    <% else %>
      <details class="py-6 group marker:content-[''] bg-gradient-to-b from-neutral-50 to-white px-6 dark:from-neutral-800 dark:to-neutral-800">
        <summary class="flex items-center w-full cursor-pointer select-none justify-between text-left text-base font-semibold text-neutral-900 dark:text-neutral-200 group-open:text-indigo-300 group-open:dark:text-indigo-400 [&amp;::-webkit-details-marker]:hidden">
          <div class="flex items-center">
            <% if route[:verb].present? %>
              <div class="w-16">
                <div class="inline-flex items-center font-bold px-1 h-5 rounded text-xs -ml-1 <%= route_verb_classes(route[:verb]) %>"><%= route[:verb] %></div>
              </div>
            <% end %>
            <span class="text-sm dark:text-neutral-300 text-neutral-500 font-normal"
      ><%= route[:reqs] %></span>
          </div>
          <svg class="mt-0.5 ml-4 h-6 w-6 flex-none stroke-neutral-700 dark:stroke-neutral-400 group-open:stroke-neutral-600" fill="none" xmlns="http://www.w3.org/2000/svg" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 12H6"></path><path class="group-open:hidden" d="M12 6v12"></path></svg>
        </summary>
        <div class="grid grid-cols-1 md:grid-cols-11 text-sm items-start py-4">
          <div class="sm:col-span-5"></div>
          <div class="sm:col-span-6">
            <div data-controller="railsui-code" class="mt-5 mb-8 first:mt-0 last:mb-0 bg-gradient-to-br rounded-lg overflow-hidden border from-neutral-900 to-neutral-700 border-neutral-700 selection:bg-salmon-500 selection:bg-opacity-25 relative text-base text-white">
              <pre><code data-railsui-code-target="snippet" data-railsui-clipboard-target="content" class="language-bash text-neutral-100"># Path
<%= route[:path].to_param.strip %>

# Controller/Action
<%= route[:reqs].to_param.strip %></code></pre>
            </div>
          </div>
        </div>
      </details>
    <% end %>
  </div>
</div>
