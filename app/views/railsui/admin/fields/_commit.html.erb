<% content_for :noscroll, true %>

<div data-railsui-configuration-target="submitContainer">
  <div class="fixed bg-white/90 backdrop-blur-sm bottom-0 md:flex-row flex flex-col items-center md:justify-between w-full md:w-[calc(100vw-280px)] md:h-16 h-24 border-t border-neutral-200/80 md:left-[280px] left-0 md:px-8 px-4 dark:bg-neutral-900/90 dark:border-neutral-700/80 md:py-0 pt-2">
    <p class="md:text-sm text-xs md:text-left text-center text-neutral-500 dark:text-neutral-400 md:w-auto md:order-1 order-2 md:mt-0 mt-2">When saving your app will automatically restart and install any dependencies.</p>

    <div class="md:order-2 order-1 md:w-auto w-full">
      <% if Railsui.config.theme.present? %>
        <%= f.button "Save changes", id: "config_button", class: "rui-btn rui-btn-black md:w-auto w-full", data: { railsui_configuration_target: "submit" } %>
      <% else %>
        <%= hidden_field_tag :button_clicked, "config_button_first_install", id: "button_clicked" %>
        <%= f.button "Install template and save changes", id: "config_button_first_install", class: "rui-btn rui-btn-black md:w-auto w-full", data: { railsui_configuration_target: "submit" }, name: "first_install" %>
      <% end %>
    </div>
  </div>
</div>
