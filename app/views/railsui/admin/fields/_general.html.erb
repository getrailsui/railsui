<div class="rui:pb-8">
  <%= heading text: "General", id: "theme", tag: "h3", class: "rui:font-semibold rui:text-xl rui:mb-3" %>

  <div class="rui:grid rui:grid-cols-1 rui:md:grid-cols-2 rui:gap-6 rui:mb-6">
    <div>
      <%= f.label :application_name, class: "rui-form-label" %>
      <%= f.text_field :application_name, class: "rui-form-input rui:w-full", placeholder: "Rails UI" %>
      <div class="rui:prose-sm rui:prose-neutral rui:dark:prose-invert rui:mt-2 rui:opacity-75">
        <p>Only used for presentational purposes.</p>
      </div>
    </div>

    <div>
      <%= f.label :support_email, class: "rui-form-label" %>
      <%= f.text_field :support_email, class: "rui-form-input rui:w-full", placeholder: "support@example.com" %>
      <div class="rui:mt-2 rui:opacity-75 rui:prose-sm rui:prose-neutral rui:dark:prose-invert">
        <p>Used in mailers and pages.</p>
      </div>
    </div>
  </div>
</div>
