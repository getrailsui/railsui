<div class="pb-8">
  <%= heading text: "Configuration", id: "configuration", tag: "h1", class: "rui:lg:text-3xl rui:text-2xl rui:text-neutral-800 rui:font-bold rui:dark:text-white rui:mb-2 rui:tracking-tight" %>
  <div class="rui:prose rui:dark:prose-invert rui:prose-neutral rui:max-w-full rui:prose-lg rui:mb-6">
    <p>Choose a theme, customize colors or stick with the defaults and go build. ðŸš€</p>
  </div>
</div>

<%= form_with model: @config, url: configuration_path, class: "rui:h-full rui:block rui:relative rui:pb-24", data: {
  action: "submit->railsui-configuration#saveChanges",
  controller: "railsui-configuration railsui-loading"
  } do |f| %>

  <%= f.hidden_field :theme, value: Railsui.config.theme %>

  <%= render "railsui/admin/fields/general", f: f %>

  <hr class="rui:mb-6 rui:border-neutral-200/80 rui:dark:border-neutral-700/80">

  <%= render "railsui/admin/fields/theme", f: f %>

  <hr class="rui:mb-6 rui:border-neutral-200/80 rui:dark:border-neutral-700/80">

  <%= render "railsui/admin/fields/color", f: f %>

  <hr class="rui:mb-6 rui:border-neutral-200/80 rui:dark:border-neutral-700/80">

  <%= render "railsui/admin/fields/pages", f: f %>

  <%= render "railsui/admin/fields/commit", f: f %>

  <%= render "railsui/admin/loader" %>
<% end %>
