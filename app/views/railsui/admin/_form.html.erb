<div class="pb-8">
  <div class="flex items-center gap-3 mb-2">
    <%= heading text: "Configuration", id: "configuration", tag: "h1", class: "lg:text-3xl text-2xl text-neutral-800 font-bold dark:text-white tracking-tight" %>
    <% if @config.build_mode == "nobuild" %>
      <span class="inline-flex items-center gap-1.5 px-3 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        No-Build Mode
      </span>
    <% else %>
      <span class="inline-flex items-center gap-1.5 px-3 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
        </svg>
        Build Mode
      </span>
    <% end %>
  </div>
  <div class="prose dark:prose-invert prose-neutral max-w-full prose-lg mb-6">
    <p>Choose a theme, customize colors or stick with the defaults and go build. ðŸš€</p>
  </div>
</div>

<%= form_with model: @config, url: configuration_path, class: "h-full block relative pb-24", data: {
  action: "submit->railsui-configuration#saveChanges",
  controller: "railsui-configuration railsui-loading"
  } do |f| %>

  <%= f.hidden_field :theme, value: Railsui.config.theme %>

  <%= render "railsui/admin/fields/general", f: f %>

  <hr class="mb-6 border-neutral-200/80 dark:border-neutral-700/80">

  <%= render "railsui/admin/fields/theme", f: f %>

  <hr class="mb-6 border-neutral-200/80 dark:border-neutral-700/80">

  <%= render "railsui/admin/fields/color", f: f %>

  <hr class="mb-6 border-neutral-200/80 dark:border-neutral-700/80">

  <%= render "railsui/admin/fields/pages", f: f %>

  <%= render "railsui/admin/fields/commit", f: f %>

  <%= render "railsui/admin/loader" %>
<% end %>
