<div data-controller="railsui-snippet" class="rui:py-8">
  <div class="rui:flex rui:items-end rui:justify-between rui:mb-6 rui:mt-4">
    <div class="rui:flex-1">
      <%= render "railsui/shared/code_example_heading", title: local_assigns[:section], subtitle: local_assigns[:heading] %>
    </div>

    <div class="rui:bg-neutral-100 rui:flex rui:items-center rui:justify-center rui:gap-1 rui:px-1 rui:py-1 rui:rounded-lg rui:dark:bg-neutral-950">
      <button data-railsui-snippet-target="previewBtn" data-action="click->railsui-snippet#togglePreview" class="rui:bg-white rui:px-3 rui:py-1.5 rui:rounded-md rui:shadow-sm rui:flex rui:items-center rui:justify-center rui:gap-2 rui:text-[13px] rui:font-semibold rui:focus:ring-4 rui:focus:ring-blue-600 rui:group rui:dark:bg-neutral-800/90 rui:dark:text-neutral-100">
        <%= icon "eye", class:  "rui:size-4 rui:text-neutral-500 rui:group-hover:text-neutral-800 rui:dark:text-neutral-300 rui:group-focus:text-neutral-800 rui:pointer-events-none rui:dark:group-hover:text-neutral-200 rui:dark:group-focus:text-neutral-200" %>
        <span>Preview</span>
      </button>
      <button data-railsui-snippet-target="codeBtn" data-action="click->railsui-snippet#toggleCode"
        class="rui:bg-transparent rui:px-3 rui:py-1.5 rui:rounded-md rui:shadow-none rui:flex rui:items-center rui:justify-center rui:gap-2 rui:text-[13px] rui:font-semibold">
        <%= icon "code-bracket", class:  "rui:size-4 rui:text-neutral-500 rui:dark:text-neutral-300 rui:group-hover:text-neutral-800 rui:group-focus:text-neutral-800 rui:pointer-events-none rui:dark:group-hover:text-neutral-200 rui:dark:group-focus:text-neutral-200" %>
        <span>Code</span>
      </button>
    </div>
  </div>

  <div>
    <div data-railsui-snippet-target="preview">
      <%= yield %>
    </div>

    <div data-railsui-snippet-target="code" class="rui:hidden">
      <%= yield :example %>
    </div>
  </div>
</div>
