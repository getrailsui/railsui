<%
  html_content = yield :html
  erb_content = yield :erb
  haml_content = yield :haml
  js_content = yield :js
  bash_content = yield :bash
  ruby_content = yield :ruby
%>

<div data-controller="code" class="mt-5 mb-8 first:mt-0 last:mb-0 bg-gradient-to-br from-slate-700 to-slate-800 rounded-xl shadow-lg overflow-hidden dark:border dark:border-slate-700 selection:bg-salmon-500 selection:bg-opacity-25 relative"  x-data="{ active: '<%= local_assigns[:active_tab] %>' }">
  <div class="bg-slate-800">
    <ul class="flex items-center justify-start space-x-2 border-b border-slate-700 px-3">
      <% if content_for?(:html) %>
        <li class="flex items-center">
          <a href="#html"
          @click.prevent="active = 'html'"
          :class="active == 'html' ? 'text-pink-400 border-pink-400' : 'border-transparent text-white/90'"
          class="-ml-2 pl-5 pr-3 py-3 font-mono  text-sm border-b-2 hover:text-pink-400  hover:border-pink-400"><%= local_assigns[:html_filename] %></a>
          <span class="w-px h-11 bg-gradient-to-b from-slate-600 to-slate-700 transform rotate-[20deg] block ml-2"></span>
        </li>
      <% end %>
      <% if content_for?(:erb) %>
        <li class="flex items-center">
          <a href="#erb"
          @click.prevent="active = 'erb'"
          :class="active == 'erb' ? 'text-rose-400 border-rose-400' : 'border-transparent text-white/90'"
          class="-ml-3 pl-6 pr-4 py-3 font-mono text-sm border-b-2 hover:text-rose-400 hover:border-rose-400"><%= local_assigns[:erb_filename] %></a>
          <span class="w-px h-11 bg-gradient-to-b from-slate-600 to-slate-700 transform rotate-[20deg] block ml-2"></span>
        </li>
      <% end %>

      <% if content_for(:haml) %>
        <li class="flex items-center">
          <a href="#haml"
          @click.prevent="active = 'haml'"
          :class="active == 'haml' ? 'text-sky-400 border-sky-400' : 'border-transparent text-white/90'"
          class="-ml-3 pl-5 pr-3 py-3 font-mono text-sm border-b-2 hover:text-sky-400 hover:border-sky-400"><%= local_assigns[:haml_filename] %></a>
          <span class="w-px h-11 bg-gradient-to-b from-slate-600 to-slate-700 transform rotate-[20deg] block ml-2"></span>
        </li>
      <% end %>

      <% if content_for?(:bash) %>
        <li class="flex items-center">
          <a href="#bash"
          @click.prevent="active = 'bash'"
          :class="active == 'bash' ? 'text-cyan-400 border-cyan-400' : 'border-transparent text-white/90'"
          class="-ml-2 pl-5 pr-3 py-3 font-mono  text-sm border-b-2 hover:text-cyan-400  hover:border-cyan-400">bash</a>
          <span class="w-px h-11 bg-gradient-to-b from-slate-600 to-slate-700 transform rotate-[20deg] block ml-2"></span>
        </li>
      <% end %>

      <% if content_for(:js) %>
        <li class="flex items-center">
          <a href="#js"
          @click.prevent="active = 'js'"
          :class="active == 'js' ? 'text-amber-400 border-amber-400' : 'border-transparent text-white/90'"
          class="-ml-3 pl-5 pr-3 py-3 font-mono text-sm border-b-2 hover:text-amber-400 hover:border-amber-400"><%= local_assigns[:js_filename] %></a>
          <span class="w-px h-11 bg-gradient-to-b from-slate-600 to-slate-700 transform rotate-[20deg] block ml-2"></span>
        </li>
      <% end %>

      <% if content_for(:ruby) %>
        <li class="flex items-center">
          <a href="#ruby"
          @click.prevent="active = 'ruby'"
          :class="active == 'ruby' ? 'text-rose-400 border-rose-400' : 'border-transparent text-white/90'"
          class="-ml-3 pl-5 pr-3 py-3 font-mono text-sm border-b-2 hover:text-rose-400 hover:border-rose-400"><%= local_assigns[:ruby_filename] %></a>
          <span class="w-px h-11 bg-gradient-to-b from-slate-600 to-slate-700 transform rotate-[20deg] block ml-2"></span>
        </li>
      <% end %>
    </ul>
  </div>
  <div role="tabpanels" class="overflow-y-auto max-h-[640px]">
    <% if content_for?(:html) %>
      <div role="tabpanel"
      x-show="active == 'html'"
      data-controller="clipboard"
      >
        <button
    data-action="click->clipboard#copy"
          class="bg-white/10 backdrop-blur-sm p-1 rounded-lg absolute right-2 top-2 hover:bg-gradient-to-br hover:to-pink-600 hover:from-pink-400 transition ease-in-out w-duration-200"
          type="button">
          <%= render_svg "clipboard", styles: "stroke-current text-white select-none", title: "Copy HTML code" %>
        </button>
        <pre><code data-code-target="snippet" data-clipboard-target="source" class="language-html"><%= html_content.to_param.strip %></code></pre>
      </div>
    <% end %>
    <% if content_for(:erb) %>
      <div
        role="tabpanel"
        x-show="active == 'erb'"
        data-controller="clipboard"
        >
        <button data-action="click->clipboard#copy"
          class="bg-white/10 backdrop-blur-sm p-1 rounded-lg absolute right-2 top-2 hover:bg-gradient-to-br hover:to-rose-600 hover:from-rose-400 transition ease-in-out w-duration-200"
          type="button">
          <%= render_svg "clipboard", styles: "stroke-current text-white select-none" %>
        </button>
        <pre><code data-code-target="snippet" data-clipboard-target="source" class="language-erb"><%= erb_content.to_param.strip %></code></pre>
      </div>
    <% end %>
    <% if content_for(:haml) %>
      <div
        role="tabpanel"
        x-show="active == 'haml'"
        data-controller="clipboard"
        >
        <button data-action="click->clipboard#copy"
          class="bg-white/10 backdrop-blur-sm p-1 rounded-lg absolute right-2 top-2 hover:bg-gradient-to-br hover:to-sky-600 hover:from-sky-400 transition ease-in-out w-duration-200"
          type="button">
          <%= render_svg "clipboard", styles: "stroke-current text-white select-none", title: "Copy HAML code" %>
        </button>
        <pre><code data-code-target="snippet" data-clipboard-target="source" class="language-haml"><%= haml_content.to_param.strip %></code></pre>
      </div>
    <% end %>
    <% if content_for(:bash) %>
      <div
        role="tabpanel"
        x-show="active == 'bash'"
        data-controller="clipboard"
        >
        <button data-action="click->clipboard#copy"
          class="bg-white/10 backdrop-blur-sm p-1 rounded-lg absolute right-2 top-2 hover:bg-gradient-to-br hover:to-cyan-600 hover:from-cyan-400 transition ease-in-out w-duration-200"
          type="button">
          <%= render_svg "clipboard", styles: "stroke-current text-white select-none", title: "Copy JavaScript code" %>
        </button>
        <pre><code data-code-target="snippet" data-clipboard-target="source" class="language-bash"><%= bash_content.to_param.strip %></code></pre>
      </div>
    <% end %>
    <% if content_for(:js) %>
      <div
        role="tabpanel"
        x-show="active == 'js'"
        data-controller="clipboard"
        >
        <button data-action="click->clipboard#copy"
          class="bg-white/10 backdrop-blur-sm p-1 rounded-lg absolute right-2 top-2 hover:bg-gradient-to-br hover:to-amber-600 hover:from-amber-400 transition ease-in-out w-duration-200"
          type="button">
          <%= render_svg "clipboard", styles: "stroke-current text-white select-none", title: "Copy JavaScript code" %>
        </button>
        <pre><code data-code-target="snippet" data-clipboard-target="source" class="language-javascript"><%= js_content.to_param.strip %></code></pre>
      </div>
    <% end %>
    <% if content_for(:ruby) %>
      <div
        role="tabpanel"
        x-show="active == 'ruby'"
        data-controller="clipboard"
        >
        <button data-action="click->clipboard#copy"
          class="bg-white/10 backdrop-blur-sm p-1 rounded-lg absolute right-2 top-2 hover:bg-gradient-to-br hover:to-rose-600 hover:from-rose-400 transition ease-in-out w-duration-200"
          type="button">
          <%= render_svg "clipboard", styles: "stroke-current text-white select-none", title: "Copy Ruby code" %>
        </button>
        <pre><code data-code-target="snippet" data-clipboard-target="source" class="language-ruby"><%= ruby_content.to_param.strip %></code></pre>
      </div>
    <% end %>
  </div>
</div>
