<div id="modal-single-action">
<%= render layout: example, locals: { heading: "Single action", section: "Modal" } do %>
<div class="bg-black/80 flex items-center jusity-center p-10 rounded-t-lg dark:bg-neutral-800 dark:border-t dark:border-x dark:border-neutral-600">
  <div class="rounded-2xl shadow-xl max-w-xs bg-white m-1 p-8 origin-bottom mx-auto dark:bg-neutral-700 dark:text-neutral-200 text-center">
    <div class="flex justify-center">
      <div class="w-12 h-12 rounded-full bg-emerald-50 flex items-center justify-center mb-3">
        <%= icon "rocket-launch", class: "size-6 text-emerald-600 flex-shrink-0" %>
      </div>
    </div>

    <h3 id="single-action-modal-title" class="h3 mt-3">Time to launch</h3>

    <div class="prose prose-neutral dark:prose-invert mt-1 mb-6 text-center">
      <p>Are you ready to deploy your changes to production? This action cannot be undone.</p>
    </div>
    <button class="btn btn-primary w-full">Launch away</button>
  </div>
</div>

<div data-controller="railsui-modal">
  <div class="flex justify-center p-6 border-x border-b border-neutral-200 rounded-b-lg relative dark:bg-neutral-700 dark:border-neutral-600 dark:border-t">
    <div class="absolute top-4 left-4">
      <%= doc_label :demo %>
    </div>
    <button type="button" data-action="click->railsui-modal#open:prevent" class="btn btn-primary" tabindex="0">
      Open single action modal
    </button>
  </div>
  <div
    aria-labelledby="single-action-modal-title"
    aria-modal="true"
    data-railsui-modal-target="container"
    class="hidden fixed inset-0 z-50 overflow-y-auto"
    role="dialog"
    >
    <div class="h-screen w-full relative flex items-center justify-center">
      <div
      data-railsui-modal-target="content"
      data-action="keyup@window->railsui-modal#closeWithEsc"
      data-transition-enter-active="transition ease-out duration-300"
      data-transition-enter-from="transform opacity-0 scale-95"
      data-transition-enter-to="transform opacity-100 scale-100"
      data-transition-leave-active="transition ease-in duration-300"
      data-transition-leave-from="transform opacity-100 scale-100"
      data-transition-leave-to="transform opacity-0 scale-95"
      class="hidden rounded-2xl shadow-xl max-w-xs bg-white m-1 p-8 origin-bottom mx-auto dark:bg-neutral-700 dark:text-neutral-200 text-center">
        <div class="flex justify-center">
          <div class="w-12 h-12 rounded-full bg-emerald-50 flex items-center justify-center mb-3">
            <%= icon "rocket-launch", class: "size-6 text-emerald-600 flex-shrink-0" %>
          </div>
        </div>

        <h3 id="single-action-modal-title" class="h3 mt-3">Time to launch</h3>

        <div class="prose prose-neutral dark:prose-invert mt-2 mb-6">
          <p>Are you ready to deploy your changes to production? This action cannot be undone.</p>
        </div>

        <button type="button" class="btn btn-primary w-full" data-action="click->railsui-modal#close">Launch away</button>
      </div>
    </div>
  </div>
</div>

