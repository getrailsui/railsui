<%= render layout: example, locals: { heading: "Reset password", section: "Authentication" } do %>
<%= render preview('neutral') do %>
<div class="pointer-events-none select-none sm:h-[800px] min-h-[600px] sm:-m-8 -m-4 pt-10 sm:pt-0 flex flex-col items-center justify-center bg-cover bg-center px-4" style="background-image: url('<%= asset_url('themes/hound/fusion.png') %>')">
  <div class="sm:flex-1 flex flex-col justify-center sm:w-[428px] w-full font-tiktok">
    <div>
      <div class="flex justify-center">
       <%= link_to "#", class: "size-12 flex justify-center" do %>
          <%= icon Railsui.config.theme, custom_path: engine_icon_path("themes/#{Railsui.config.theme}/logo.svg"), class: "w-10 h-auto fill-current text-primary-600 hover:text-primary-700 duration-300 transition ease-in-out dark:hover:text-primary-500", variant: :solid %>
          <span class="sr-only"><%= Railsui.config.application_name %></span>
        <% end %>
      </div>

      <div class="mt-6">
        <div class="text-center">
          <h1 class="md:h3 h4 my-3">Forget your password?</h1>
          <p class="mb-6 text-neutral-700 dark:text-neutral-200">Reset it in an instant</p>
        </div>
      </div>

      <div class="bg-white dark:bg-neutral-900/50 dark:border-neutral-700/80 shadow-xs rounded-lg p-8 border border-neutral-300/60">

        <form class="font-tiktok" action="#">
          <div class="form-group">
            <label class="form-label" for="user_email">Email</label>
            <div class="relative">
              <input autocomplete="email" class="form-input peer focus:pl-10 transition" pattern="[^@ ]+@[^@ ]+.[^@ ]+" title="Invalid email address" type="email" value="" name="user[email]" id="user_email">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" class="size-5 absolute tranneutral-x-0 top-3 text-neutral-300 peer-focus:text-primary-500/80 opacity-0 transition transform peer-focus:opacity-100 peer-focus:tranneutral-x-3 dark:peer-focus:text-primary-400" role="img" aria-labelledby="ajrvr1r2uprktqxj1awzfc2by0wey0al"><title id="ajrvr1r2uprktqxj1awzfc2by0wey0al">Envelope</title>
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"></path>
            </svg>

            </div>
          </div>
          <input type="submit" name="commit" value="Send me reset password instructions" class="btn btn-primary w-full" data-disable-with="Send me reset password instructions">
        </form>
      </div>

      <div class="mt-4">
        <div class="text-center mb-1">
          <a class="text-sm text-neutral-600 hover:text-neutral-800 dark:text-neutral-400 dark:hover:text-neutral-500" href="#">Didn't receive confirmation instructions?</a>
        </div>

        <div class="text-center mb-2">
          <a class="text-sm text-neutral-600 hover:text-neutral-800 dark:text-neutral-400 dark:hover:text-neutral-500" href="/users/unlock/new">Didn't receive unlock instructions?</a>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

