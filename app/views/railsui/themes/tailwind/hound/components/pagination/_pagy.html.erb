<!-- Source: https://github.com/ddnexus/pagy/blob/master/lib/templates/nav.html.erb -->

<%% link = pagy_link_proc(pagy) %>
<nav aria-label="pager" class="text-slate-500 sm:text-sm text-base font-medium" role="navigation">
  <div class="flex flex-wrap items-center sm:justify-between justify-center">
  <%% if pagy.prev %>
    <div class="sm:flex-1 flex justify-start items-center sm:w-auto w-full">
      <span class="flex justify-center items-center space-x-2 py-2 px-4 rounded hover:bg-slate-50/50 group hover:text-indigo-600 sm:w-auto w-full sm:bg-transparent bg-slate-50 sm:mb-0 mb-3">
        <%%== link.call(pagy.prev, pagy_t('pagy.nav.prev'), 'aria-label="previous"') %>
      </span>
    </div>
  <%% else %>
    <div class="sm:flex-1 flex justify-start items-center sm:w-auto w-full">
      <span class="opacity-40 flex justify-center items-center space-x-2 py-2 px-4 rounded sm:w-auto w-full sm:bg-transparent bg-slate-50 sm:mb-0 mb-3 pointer-events-none select-none">
        <%%== pagy_t('pagy.nav.prev') %>
      </span>
    </div>
  <%% end %>

  <!-- series example: [1, :gap, 7, 8, "9", 10, 11, :gap, 36]  -->
  <%% pagy.series.each do |item| %>
    <%% if item.is_a?(Integer) %>
      <span class="py-2 px-4 block border-t-2 border-transparent rounded hover:bg-slate-50/50">
        <%%== link.call(item) %>
      </span>
    <%% elsif item.is_a?(String) %>
      <span class="py-2 px-4 border-t-2 border-transparent block border-indigo-500 hover:bg-indigo-50/50 text-indigo-600"><%%= item %></span>
    <%% elsif item == :gap %>
      <span class="py-2 px-4 block border-t-2 border-transparent rounded pointer-events-none select-none"><%%== pagy_t('pagy.nav.gap') %></span>
    <%% end %>
  <%% end %>

  <%% if pagy.next %>
    <div class="sm:flex-1 flex justify-end items-center sm:w-auto w-full">
      <span class="flex justify-center items-center space-x-2 py-2 px-4 rounded hover:bg-slate-50/50 group hover:text-indigo-600 sm:w-auto w-full sm:bg-transparent bg-slate-50 sm:mt-0 mt-3">
        <%%== link.call(pagy.next, pagy_t('pagy.nav.next'), 'aria-label="next"') %>
      </span>
    </div>
  <%% else %>
    <div class="sm:flex-1 flex justify-end items-center sm:w-auto w-full">
      <span class="opacity-40 flex justify-center items-center space-x-2 py-2 px-4 rounded sm:w-auto w-full sm:bg-transparent bg-slate-50 sm:mt-0 mt-3">
        <%%== pagy_t('pagy.nav.next') %>
      </span>
    </div>
  <%% end %>
  </div>
</nav>
<% end %>

