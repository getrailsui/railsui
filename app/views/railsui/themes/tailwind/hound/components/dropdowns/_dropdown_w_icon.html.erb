<div data-controller="dropdown" class="relative inline-block">
  <button type="button" data-action="click->dropdown#toggle click@window->dropdown#hide" class="btn <%= local_assigns[:class] %> pr-3">
    <%= local_assigns[:label] %>
    <%= icon "chevron-down", classes: "w-3 h-3 ml-2" %>
  </button>
  <div
    class="hidden transition transform origin-to-right absolute -left-1 top-10 bg-white rounded-lg shadow-xl shadow-slate-900/10 border border-slate-200 min-w-[200px] z-50 py-2 dark:bg-slate-700 dark:shadow-slate-900/50 dark:border-slate-500/60 text-sm font-medium text-slate-600 dark:text-slate-200"
    data-dropdown-target="menu"
    data-transition-enter-from="opacity-0 scale-95"
    data-transition-enter-to="opacity-100 scale-100"
    data-transition-leave-from="opacity-100 scale-100"
    data-transition-leave-to="opacity-0 scale-95"
    >
    <a href="#" class="px-4 py-[.4rem] hover:text-indigo-600 dark:hover:text-indigo-300 group flex items-center justify-start space-x-3">
      <%= icon "bookmark", classes: "w-4 h-4 dark:text-slate-200 text-slate-600 group-hover:text-indigo-600 dark:group-hover:text-indigo-300 flex-shrink-0" %>
      <span>Bookmark</span>
    </a>
    <a href="#" class="px-4 py-[.4rem] hover:text-indigo-600 dark:hover:text-indigo-300 group flex items-center justify-start space-x-3">
      <%= icon "flag", classes: "w-4 h-4 dark:text-slate-200 text-slate-600 group-hover:text-indigo-600 dark:group-hover:text-indigo-300 flex-shrink-0" %>
      <span>Report</span>
    </a>
    <a href="#" class="px-4 py-[.4rem] hover:text-indigo-600 dark:hover:text-indigo-300 group flex items-center justify-start space-x-3">
    <%= icon "arrow-down-tray", classes: "w-4 h-4 dark:text-slate-200 text-slate-600 group-hover:text-indigo-600 dark:group-hover:text-indigo-300 flex-shrink-0" %>
      <span>Export</span>
    </a>
  </div>
</div>
