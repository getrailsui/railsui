<div id="typography-lists">
<%= render layout: example, locals: { heading: "Lists", section: "Typography" } do %>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <div>
    <p class="text-sm text-zinc-600 mt-2 dark:text-zinc-400">Standard</p>
    <ul class="list-disc">
      <li>A quick brown</li>
      <li>fox jumps over</li>
      <li>the lazy dog</li>
    </ul>
  </div>

  <div>
    <p class="text-sm text-zinc-600 mt-2 dark:text-zinc-400">Unstyled</p>
    <ul class="list-reset">
      <li>A quick brown</li>
      <li>fox jumps over</li>
      <li>the lazy dog</li>
    </ul>
  </div>

  <div>
    <p class="text-sm text-zinc-600 mt-2 dark:text-zinc-400">Decimal</p>
    <ol class="list-decimal">
      <li>A quick brown</li>
      <li>fox jumps over</li>
      <li>the lazy dog</li>
    </ol>
  </div>
</div>

