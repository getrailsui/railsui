<div id="typography-blockquote">
<%= render layout: example, locals: { heading: "Blockquote", section: "Typography" } do %>
  <figure class="pl-6 border-l-2 border-primary-500 py-1">
    <blockquote class="text-xl font-heading font-light mb-1 text-zinc-600 dark:text-zinc-300">
      <p>A well-known quote, contained in a blockquote element.</p>
    </blockquote>
    <figcaption class="text-zinc-500 text-sm dark:text-zinc-300">
      Someone famous in <cite title="Source Title">Source Title</cite>
    </figcaption>
  </figure>

<% content_for :example, flush: true do %>
