<div id="datalist-property-list">
  <%= render layout: example, locals: { heading: "Property list", section: "Datalist" } do %>

<%= render preview "zinc" do %>
<h1 class="mb:mb-0 mb-6 text-4xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight">Properties</h1>
<div class="text-left my-8" data-controller="railsui-select-all">
  <div class="flex items-center justify-start">
    <div class="md:w-12 mb-3 md:mb-0">
      <div class="flex items-center space-x-3">
        <input type="checkbox" class="form-input-checkbox" name="all_properties" id="all_properties"
        data-railsui-select-all-target="selectAll" />
        <label for="all_properties" class="form-label mb-0 md:hidden block text-zinc-700 dark:text-zinc-200">All properties</label>
      </div>
    </div>
    <div class="font-medium md:w-auto md:block hidden flex-1">Property</div>
    <div class="font-medium md:w-2/12 md:block hidden">Sync</div>
    <div class="font-medium md:w-2/12 md:block hidden">Hosts</div>
    <div class="md:w-1/12 md:block hidden"></div>
  </div>
  <ul class="divide-y divide-zinc-200/80 dark:divide-zinc-700">
    <%= render "railsui/themes/shepherd/components/datalist/line_item",
      locals: {
      property: image_url('themes/shepherd/property-1.jpg'),
      title: "Cozy Mountain A-Frame",
      subtitle: "Nature's Nook",
      avatar_id: "32",
      avatar_variant: "men" } %>

    <%= render "railsui/themes/shepherd/components/datalist/line_item",
      locals: {
      property: image_url('themes/shepherd/property-2.jpg'),
      title: "Alpine Retreat Haven",
      subtitle: "The Haven",
      avatar_id: "32",
      avatar_variant: "men" } %>

    <%= render "railsui/themes/shepherd/components/datalist/line_item",
      locals: {
      property: image_url('themes/shepherd/property-3.jpg'),
      title: "Mountain Vista Chalet",
      subtitle: "The Mountain Majesty",
      avatar_id: "32",
    avatar_variant: "men" } %>
  </ul>
</div>
<% end %>

