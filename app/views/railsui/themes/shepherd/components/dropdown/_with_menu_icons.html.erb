<% content_for :example, flush: true do %>
<% content_for :html, flush: true do %>
<div data-controller="railsui-dropdown" class="relative inline-block">
  <button type="button" data-action="click->railsui-dropdown#toggle click@window->railsui-dropdown#hide" class="btn btn-primary pr-3">
    Dropdown
    <%%= icon "chevron-down", class: "size-3 ml-2" %>
  </button>
  <div
    class="hidden origin-top-left absolute left-0 top-14 dropdown-menu"
    data-railsui-dropdown-target="menu"
    data-transition-enter-from="opacity-0 scale-95"
    data-transition-enter-to="opacity-100 scale-100"
    data-transition-leave-from="opacity-100 scale-100"
    data-transition-leave-to="opacity-0 scale-95">
      <a href="#" class="dropdown-item">
        <%%= icon "bookmark", class: "size-4 text-zinc-600 group-hover:text-primary-600 flex-shrink-0" %>
        <span>Bookmark</span>
      </a>
      <a href="#" class="dropdown-item">
        <%%= icon "flag", classes: "size-4 text-zinc-600 group-hover:text-primary-600 flex-shrink-0" %>
        <span>Report</span>
      </a>
      <a href="#" class="dropdown-item">
        <%%= icon "arrow-down-tray", class: "size-4 text-zinc-600 group-hover:text-primary-600 flex-shrink-0" %>
        <span>Export</span>
      </a>
  </div>
</div>
<% end %>

