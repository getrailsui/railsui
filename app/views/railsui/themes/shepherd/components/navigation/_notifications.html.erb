<li>
  <%#  Notifications Dropdown %>
  <div class="md:flex justify-end md:flex-1 md:mr-4 mr-3 relative" data-controller="railsui-dropdown">
    <button type="button" class="rounded-full md:w-10 md:h-10 w-12 h-12 border-zinc-300 border flex items-center justify-center focus:border-zinc-400 focus:ring-4 focus:ring-zinc-100 hover:border-zinc-400/80 dark:border-zinc-600 dark:focus:ring-zinc-700 dark:focus:border-zinc-400" data-action="click->railsui-dropdown#toggle click@window->railsui-dropdown#hide">
      <div class="relative">
        <%= icon "bell", classes: "text-zinc-500 md:w-5 md:h-5 w-6 h-6 group-hover:text-zinc-600 dark:group-hover:text-zinc-300 dark:text-zinc-400 stroke-current" %>
        <span class="w-2 h-2 bg-red-500 rounded-full hover:animate-pulse absolute top-0 right-0 z-20 dark:bg-primary-500/95"></span>
      </div>
    </button>
    <div class="origin-to-right md:absolute mt-2 ml-2 md:ml-0 md:mt-0 md:shadow-xl sm:w-[360px] md:min-w-[360px]  divide-y divide-zinc-200 text-left dark:divide-zinc-700 hidden transition transform md:origin-top-right origin-top-left absolute right-0 top-12 bg-white rounded-lg shadow-xl shadow-zinc-900/10 border border-zinc-200 md:w-[320px] w-full z-50 py-2 dark:bg-zinc-900 dark:shadow-zinc-900/50 dark:border-zinc-500/60 md:text-sm text-base font-medium text-zinc-600 dark:text-zinc-200" data-railsui-dropdown-target="menu" data-transition-enter-from="opacity-0 scale-95" data-transition-enter-to="opacity-100 scale-100" data-transition-leave-from="opacity-100 scale-100" data-transition-leave-to="opacity-0 scale-95">
      <div class="px-4 py-3 md:py-2 flex items-center justify-between group">
        <div class="flex-1">
          <div class="flex items-start gap-2">
            <%= image_tag demo_avatar_url(variant: "men", id: rand(1..100).to_s), class: "size-6 object-cover rounded-full flex-shrink-0 mt-1", alt: "Avatar" %>
            <div class="flex-1">
              <p class="truncate">John D. replied to <%= link_to "your comment", "#", class: "underline text-primary-600 hover:text-primary-700 dark:text-primary-500 dark:hover:text-primary-400" %></p>
              <p class="text-xs text-zinc-500 dark:text-zinc-400">Just now</p>
            </div>
          </div>
        </div>
        <button class="opacity-0 group-hover:opacity-100 transition ease-in-out duration-300 flex items-center justify-center rounded-full w-7 h-7 hover:bg-zinc-50/50 group border border-zinc-200 hover:border-zinc-300 focus:ring-4 focus:ring-zinc-100/75 bg-white/50 dark:bg-zinc-700/75 dark:focus:ring-zinc-100/10 dark:border-zinc-600 dark:hover:bg-white/20">
          <%= icon "x-mark", classes: "w-3 h-3 text-zinc-600 group-hover:text-primary-600 dark:group-hover:text-zinc-100 dark:text-zinc-50 stroke-current" %>
        </button>
      </div>
      <div class="px-4 py-3 md:py-2 flex items-center justify-between group">
        <div class="flex-1">
          <div class="flex items-start gap-2">
            <%= image_tag demo_avatar_url(variant: "women", id: rand(1..100).to_s), class: "size-6 object-cover rounded-full flex-shrink-0 mt-1", alt: "Avatar" %>
            <div class="flex-1">
              <p>Jane D. posted <%= link_to "an update", "#", class: "underline text-primary-600 hover:text-primary-700 dark:text-primary-500 dark:hover:text-primary-400" %></p>
              <p class="text-xs text-zinc-500 dark:text-zinc-400">15 mins ago</p>
            </div>
          </div>
        </div>
        <button class="opacity-0 group-hover:opacity-100 transition ease-in-out duration-300 flex items-center justify-center rounded-full w-7 h-7 hover:bg-zinc-50/50 group border border-zinc-200 hover:border-zinc-300 focus:ring-4 focus:ring-zinc-100/75 bg-white/50 dark:bg-zinc-700/75 dark:focus:ring-zinc-100/10 dark:border-zinc-600 dark:hover:bg-white/20">
          <%= icon "x-mark", classes: "w-3 h-3 text-zinc-600 group-hover:text-primary-600 dark:group-hover:text-zinc-100 dark:text-zinc-50 stroke-current" %>
        </button>
      </div>
      <div class="px-4 py-3 md:py-2 flex items-center justify-between group">
        <div class="flex-1">
          <div class="flex items-start gap-2">
            <%= image_tag demo_avatar_url(variant: "men", id: rand(1..100).to_s), class: "size-6 object-cover rounded-full flex-shrink-0 mt-1", alt: "Avatar" %>
            <div class="flex-1">
              <p>Scotty P. shared <%= link_to "a repository", "#", class: "underline text-primary-600 hover:text-primary-700 dark:text-primary-500 dark:hover:text-primary-400" %></p>
              <p class="text-xs text-zinc-500 dark:text-zinc-400">2 hours ago</p>
            </div>
          </div>
        </div>
        <button class="opacity-0 group-hover:opacity-100 transition ease-in-out duration-300 flex items-center justify-center rounded-full w-7 h-7 hover:bg-zinc-50/50 group border border-zinc-200 hover:border-zinc-300 focus:ring-4 focus:ring-zinc-100/75 bg-white/50 dark:bg-zinc-700/75 dark:focus:ring-zinc-100/10 dark:border-zinc-600 dark:hover:bg-white/20">
          <%= icon "x-mark", classes: "w-3 h-3 text-zinc-600 group-hover:text-primary-600 dark:group-hover:text-zinc-100 dark:text-zinc-50 stroke-current" %>
        </button>
      </div>
      <div>
        <%= link_to "#", class: "flex items-center justify-between group px-4 pt-3 pb-2 hover:text-primary-500 text-sm group text-zinc-500 dark:text-zinc-200 dark:hover:bg-zinc-800 dark:hover:text-white font-heading font-normal" do %>
          <span>View all notifications</span>
          <%= icon "chevron-right", classes: "group-hover:tranzinc-x-1 transform transition ease-in-out w-4 h-4 text-zinc-400 group-hover:text-primary-500 dark:group-hover:text-primary-200 stroke-current" %>
        <% end %>
      </div>
    </div>
  </div>
  <%# end Notifications Dropdown %>
</li>
