<%# Card - With header %>
<div id="card-with-header">
<%= render layout: example, locals: { heading: "With header", section: "Card" } do %>
<%= render preview "zinc" do %>
<div class="rounded-lg shadow-sm shadow-zinc-400/20 bg-white p-6 dark:bg-zinc-800 dark:text-white border border-zinc-300 dark:border-zinc-600/80 dark:shadow-zinc-950/40">
  <div class="-mx-6 border-b border-zinc-200 dark:border-zinc-700 px-6 pb-4 mb-4">
    <h3 class="text-3xl font-bold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight">Properties</h3>
    <p class="font-light font-heading text-base text-zinc-700 tracking-normal mt-3 lg:mb-0 mb-3 dark:text-zinc-300">Group, manage, and study your properties using Shepherd.</p>
  </div>

  <div id="properties-list" class="opacity-25 pointer-events-none select-none">
    <div class="text-left my-8" data-controller="railsui-select-all">
      <div class="flex items-center justify-start">
        <div class="font-medium md:w-auto md:block hidden flex-1">Property</div>
        <div class="font-medium md:w-2/12 md:block hidden">Listings</div>
        <div class="font-medium md:w-2/12 md:block hidden">Sync</div>
        <div class="font-medium md:w-2/12 md:block hidden">Hosts</div>
        <div class="md:w-1/12 md:block hidden"></div>
      </div>
      <ul class="divide-y divide-zinc-200/80 dark:divide-zinc-700">
        <%= render "railsui/themes/shepherd/components/card/list_item", locals: {
          property: image_url('themes/shepherd/property-1.jpg'),
          title: "Cozy Mountain A-Frame",
          nickname: "Nature's Nook",
          listings: "3",
         } %>

        <%= render "railsui/themes/shepherd/components/card/list_item", locals: {
          property: image_url('themes/shepherd/property-2.jpg'),
          title: "Alpine Retreat Haven",
          nickname: "The Haven",
          listings: "3",
         } %>

        <%= render "railsui/themes/shepherd/components/card/list_item", locals: {
          property: image_url('themes/shepherd/property-3.jpg'),
          title: "Mountain Vista Chalet",
          nickname: "The Mountain Majesty",
          listings: "3",
         } %>
      </ul>
    </div>
  </div>
</div>
<% end %>

