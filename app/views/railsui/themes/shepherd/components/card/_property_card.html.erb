<%# Card - Property card %>
<div id="card-property-card">
<%= render layout: example, locals: { heading: "Property card", section: "Card" } do %>

<%= render preview "zinc" do %>
 <div class="grid md:w-[300px]">
  <%= render "railsui/themes/shepherd/components/card/preview/property_card", locals: {
    property: image_url('themes/shepherd/property-1.jpg'),
    title: "Cozy Mountain A-Frame",
    subtitle: "Nature's Nook",
  } %>
</div>
