
<%# Card - with action %>
<div id="card-with-action">
<%= render layout: example, locals: { heading: "With action", section: "Card" } do %>


<%= render preview "zinc"  do %>
<div class="rounded-lg shadow-sm shadow-zinc-400/20 bg-white p-6 dark:bg-zinc-800 dark:text-white border border-zinc-300/90 dark:border-zinc-600/80 dark:shadow-zinc-950/40">
  <div class="pb-6 mb-4 flex items-center justify-between flex-wrap">
    <h1 class="text-4xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight">Posts</h1>
    <a href="#" class="btn btn-primary" data-controller="railsui-prevent" data-action="click->railsui-prevent#prevent">New post</a>
  </div>
  <div id="posts" class="divide-y divide-zinc-200 dark:divide-zinc-700 pointer-events-none opacity-40 select-none">
