<% content_for :ruby, flush: true do %>
class PostsController < ApplicationController
  def index
    @posts = Post.all
    @pagy, @posts = pagy(@posts)

    # Build pagination data for Rails UI component
    build_pagination_data
  end

  private

  # This is probably worth extracting to a concern for reuse in other controllers
  def build_pagination_data
    # Build the pages array from Pagy's series
    @pagination_pages = @pagy.series.map do |item|
      case item
      when Integer
        item == @pagy.page ? item.to_s : item  # Current page as string, others as integers
      when String
        item  # Already a string (current page)
      when :gap
        :gap  # Gap symbol
      end
    end

    # Build navigation URLs
    @pagination_prev_url = @pagy.prev ? posts_path(page: @pagy.prev) : nil
    @pagination_next_url = @pagy.next ? posts_path(page: @pagy.next) : nil
  end
end
<% end %>


