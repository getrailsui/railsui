<%= render preview('gray') do %>
<div class="md:pl-6">
  <nav aria-label="breadcrumb" class="my-6 font-medium flex text-slate-500 dark:text-slate-200 text-sm mb-4">
    <ol class="flex flex-wrap items-center gap-3 list-none m-0 p-0">
      <li>
        <a class="hover:underline hover:text-slate-600 dark:hover:text-slate-400 flex items-center gap-2.5" href="/">
          <%= icon "home", class: "size-4 shrink-0" %>
          <span>Home</span>
