<div id="dropdown-base">
<%= render layout: example, locals: { heading: "Base", section: "Dropdown" } do %>

<%= render preview :gray do %>
<div class="flex md:flex-row flex-col flex-wrap items-center justify-start md:space-x-3 space-x-0 space-y-3 md:space-y-0">
<%= render "railsui/themes/hound/components/dropdown/dropdown", label: "Dropdown", class: "btn-primary" %>

<%= render "railsui/themes/hound/components/dropdown/dropdown", label: "Dropdown", class: "btn-dark" %>

<%= render "railsui/themes/hound/components/dropdown/dropdown", label: "Dropdown", class: "btn-light" %>

<%= render "railsui/themes/hound/components/dropdown/dropdown", label: "Dropdown", class: "btn-white" %>
</div>
<% end %>

<% content_for :example, flush: true do %>
<% content_for :html, flush: true do %>
<div data-controller="railsui-dropdown" class="relative inline-block">
  <button type="button" data-action="click->railsui-dropdown#toggle click@window->railsui-dropdown#hide" class="btn btn-primary gap-3">
    Dropdown
    <%%= icon "chevron-down", class: "size-3" %>
  </button>
  <div
    class="hidden origin-top-left absolute left-0 top-10 dropdown-menu"
    data-railsui-dropdown-target="menu"
    data-transition-enter-from="opacity-0 scale-95"
    data-transition-enter-to="opacity-100 scale-100"
    data-transition-leave-from="opacity-100 scale-100"
    data-transition-leave-to="opacity-0 scale-95"
    >
    <a href="#" class="dropdown-item">Bookmark</a>
    <a href="#" class="dropdown-item">Report</a>
    <a href="#" class="dropdown-item">Export</a>
  </div>
</div>
<% end %>

<% content_for :erb, flush: true do %>
<div data-controller="railsui-dropdown" class="relative inline-block">
  <%%= button_tag data: { action: "click->railsui-dropdown#toggle click@window->railsui-dropdown#hide" }, class: "btn btn-primary gap-2 pr-2.5" do %>
    Dropdown
    <%%= icon "chevron-down", class: "size-3" %>
  <%% end %>
  <div
    class="hidden origin-top-left absolute left-0 top-10 dropdown-menu"
    data-railsui-dropdown-target="menu"
    data-transition-enter-from="opacity-0 scale-95"
    data-transition-enter-to="opacity-100 scale-100"
    data-transition-leave-from="opacity-100 scale-100"
    data-transition-leave-to="opacity-0 scale-95"
    >
    <%%= link_to "Bookmark", "#", class: "dropdown-item" %>
    <%%= link_to "Report", "#", class: "dropdown-item" %>
    <%%= link_to "Export", "#", class: "dropdown-item" %>
  </div>
</div>
<% end %>

<% content_for :haml, flush: true do %>
.relative.inline-block{"data-controller" => "railsui-dropdown"}
  = button_tag data: { action: "click->railsui-dropdown#toggle click@window->railsui-dropdown#hide" }, class: "btn btn-primary gap-2 pr-2.5" do
    Dropdown
    \#{icon "chevron-down", class: "size-3"}
  .hidden.origin-top-left.absolute.left-0.top-10.dropdown-menu{"data-railsui-dropdown-target" => "menu", "data-transition-enter-from" => "opacity-0 scale-95", "data-transition-enter-to" => "opacity-100 scale-100", "data-transition-leave-from" => "opacity-100 scale-100", "data-transition-leave-to" => "opacity-0 scale-95"}
    = link_to "Bookmark", "#", class: "dropdown-item"
    = link_to "Report", "#", class: "dropdown-item"
    = link_to "Export", "#", class: "dropdown-item"
<% end %>

<%= render_snippet %>
<% end %>
<% end %>
</div>
