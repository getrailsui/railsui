<% content_for :rui, flush: true do %>
<!-- Extended CardComponent for post management -->
class PostCardComponent < Rui::CardComponent
  def initialize(posts:, **options)
    @posts = posts
    super(padding: :normal, **options)
  end

  private

  def card_classes
    super # Use base card styles
  end
end

<!-- app/views/components/post_card_component.html.erb -->
<div class="<%%= card_classes %>" <%%= html_attributes %>>
  <div class="-mx-6 border-b border-slate-200 dark:border-slate-700 px-6 pb-4 mb-4 flex items-center justify-between flex-wrap">
    <h1 class="text-2xl font-extrabold text-slate-900 dark:text-slate-100 tracking-tight">Posts</h1>
    <%%= rui :button, "New post", href: new_post_path, variant: :primary %>
  </div>
  <ul class="divide-y divide-slate-300/70 dark:divide-slate-600/70 last-child:pb-0">
    <%% @posts.each do |post| %>
      <li class="py-3 -mx-6 px-6">
        <%%= link_to post.title, post_path(post), class: "btn-link" %>
        <p class="text-slate-700 dark:text-slate-400"><%%= truncate(post.excerpt, length: 80) %></p>
      </li>
    <%% end %>
  </ul>
</div>

<!-- Usage: -->
<%%= render PostCardComponent.new(posts: @posts) %>

<!-- Or with base card: -->
<%%= rui :card do |card| %>
  <%% card.with_header do %>
