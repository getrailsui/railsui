<div class="max-w-4xl mx-auto px-4 my-10">
  <h1 class="h2">Account</h1>

  <div class="my-6">
    <h2 class="font-normal text-lg text-slate-700 dark:text-slate-200 mb-2">Profile</h2>
    <p class="text-sm text-slate-600 dark:text-slate-400">This information will often be displayed publically.</p>
  </div>

  <form data-turbo="false" class="edit_user" id="edit_user" enctype="multipart/form-data" action="#" accept-charset="UTF-8" method="post"><input type="hidden" name="_method" value="put" autocomplete="off"><input type="hidden" name="authenticity_token" value="#" autocomplete="off">

    <div class="grid grid-cols-1 sm:grid-cols-2 sm:gap-10 gap-4 items-end pb-6">
      <div>
        <label class="form-label" for="user_name">Name</label>
        <input class="form-input" type="email" name="user[name]" id="user_name">
      </div>

      <div>
        <div class="flex items-center">
          <div class="size-14 flex items-center justify-center rounded-full bg-slate-300/50 pointer-events-none select-none border-2 border-slate-200">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" class="size-6 text-white" role="img" aria-labelledby="asq6ebgzod4hniilym3b36wbui5864cr"><title id="asq6ebgzod4hniilym3b36wbui5864cr">User</title>
