<div data-controller="railsui-search railsui-helper" data-railsui-helper-url-value="_url"
data-railsui-helper-path-value="_path">
  <div class="dark:text-neutral-100 text-neutral-800">
    <%= render "railsui/routes/nav" %>

    <nav aria-label="breadcrumb" class="my-6 font-medium flex dark:text-neutral-200 text-sm flex-1">
      <ol class="flex flex-wrap items-center space-x-3">
        <li>
          <%= link_to "Rails UI", railsui.root_path, class: "hover:underline" %>
        </li>

        <li class="flex space-x-3">
          <div class="flex items-center">
            <span class="text-neutral-300 dark:text-neutral-500">/</span>
          </div>
          <a href="#" aria-current="page" class="text-underline">Routes</a>
        </li>
      </ol>
    </nav>
    <h1 class="md:text-6xl text-3xl font-extrabold tracking-tight text-neutral-900 dark:text-white">Routes</h1>

    <div class="md:flex items-center justify-between md:pt-16 md:pb-24 py-4">
      <%= form_tag railsui.routes_path, method: :get, data: { railsui_search_target: "form" } do %>
        <div class="relative">
          <%= text_field :query, nil, id: 'search', autofocus: true, placeholder: "Search routes", class: "border-b border-x-0 focus:bg-transparent border-t-0 border-neutral-300 focus:ring-0 block w-full md:w-[900px] flex-shrink-0 dark:bg-transparent dark:border-neutral-600 peer text-2xl px-1 py-5 text-neutral-800 font-medium dark:text-white placeholder:text-neutral-400 selection:bg-netural-300 dark:selection:bg-neutral-700/30", data: { action: "keyup->railsui-search#search keyup.esc->railsui-search#clear" }, tabindex: 0 %>

          <span class="absolute opacity-0 peer-focus:opacity-100 transition ease-in-out duration-200 right-4 top-[20px] text-sm -translate-x-2 peer-focus:translate-x-0 text-neutral-600 dark:text-neutral-400">Hit <span class="border border-neutral-400 text-neutral-600 inline-flex dark:text-neutral-100 leading-none items-center rounded px-1 py-0 h-5 font-mono text-xs">esc</span> to reset</span>
        </div>
      <% end %>

      <div class="md:flex items-center justify-between md:pt-0 pt-6 z-50">
        <div class="flex items-center md:w-auto w-full">
          <button role="button" type="button" title="Returns a relative path (without the http or domain)" class="bg-transparent backdrop-blur-md rounded-l-md border border-neutral-300 font-medium text-sm text-neutral-700 px-5 py-2 border-r hover:bg-neutral-100 focus:ring-4 focus:ring-white/20 focus:bg-indigo-500 focus:text-white focus:border-indigo-600 dark:bg-neutral-800 dark:border-neutral-700/80 dark:text-neutral-100 md:w-auto w-full dark:hover:bg-neutral-800"
          data-railsui-helper-target="btn" data-action="click->railsui-helper#togglePath">Path</button>
          <button role="button" type="button" title="Returns an absolute URL (with the http and domain)" class="bg-transparent backdrop-blur-md rounded-r-md border-r border-y border-neutral-300 font-medium text-sm text-neutral-700 px-5 py-2 hover:bg-neutral-100 focus:ring-4 focus:ring-white/20 focus:bg-indigo-500 focus:text-white focus:border-indigo-600 dark:bg-neutral-800 dark:border-neutral-700/80 dark:text-neutral-100 md:w-auto w-full dark:hover:bg-neutral-800" data-railsui-helper-target="btn" data-action="click->railsui-helper#toggleUrl">URL</button>
        </div>
      </div>
    </div>
  </div>
  <%= @routes.format(ActionDispatch::Routing::HtmlTableFormatter.new(self))%>
</div>
