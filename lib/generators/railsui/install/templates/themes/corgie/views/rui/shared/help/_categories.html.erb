<div class="py-10">
  <div class="py-6">
    <h2 class="h4">Browse Help Topics</h2>
    <div class="prose prose-neutral dark:prose-invert">
      <p>Find detailed guides and tutorials</p>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <%= link_to "#", class: "card-muted" do %>
      <div class="flex items-start gap-3">
        <div class="size-8 bg-blue-100 rounded-lg flex items-center justify-center shrink-0">
          <%= icon "book-open", class: "size-4 text-blue-600" %>
        </div>
        <div>
          <h3 class="h6">Getting Started Guide</h3>
          <p class="text-sm text-neutral-500 mt-1">Learn the basics of using Corgie AI effectively</p>
        </div>
      </div>
    <% end %>

    <%= link_to "#", class: "card-muted" do %>
      <div class="flex items-start gap-3">
        <div class="size-8 bg-green-100 rounded-lg flex items-center justify-center shrink-0">
          <%= icon "cog-6-tooth", class: "size-4 text-green-600" %>
        </div>
        <div>
          <h3 class="h6">Account Settings</h3>
          <p class="text-sm text-neutral-500 mt-1">Manage your profile, preferences, and security</p>
        </div>
      </div>
    <% end %>

    <%= link_to "#", class: "card-muted" do %>
      <div class="flex items-start gap-3">
        <div class="size-8 bg-purple-100 rounded-lg flex items-center justify-center shrink-0">
          <%= icon "credit-card", class:"size-4 text-purple-600" %>
        </div>
        <div>
          <h3 class="h6">Billing & Subscriptions</h3>
          <p class="text-sm text-neutral-500 mt-1">Payment methods, plans, and billing history</p>
        </div>
      </div>
    <% end %>

    <%= link_to "#", class: "card-muted" do %>
      <div class="flex items-start gap-3">
        <div class="size-8 bg-red-100 rounded-lg flex items-center justify-center shrink-0">
          <%= icon "shield-check", class:"size-4 text-red-600" %>
        </div>
        <div>
          <h3 class="h6">Privacy & Security</h3>
          <p class="text-sm text-neutral-500 mt-1">Data protection, privacy settings, and security</p>
        </div>
      </div>
    <% end %>

    <%= link_to "#", class: "card-muted" do %>
      <div class="flex items-start gap-3">
        <div class="size-8 bg-yellow-100 rounded-lg flex items-center justify-center shrink-0">
          <%= icon "code-bracket-square", class:"size-4 text-yellow-600" %>
        </div>
        <div>
          <h3 class="h6">API Integration</h3>
          <p class="text-sm text-neutral-500 mt-1">Developer resources and API documentation</p>
        </div>
      </div>
    <% end %>

    <%= link_to "#", class: "card-muted" do %>
      <div class="flex items-start gap-3">
        <div class="size-8 bg-indigo-100 rounded-lg flex items-center justify-center shrink-0">
          <%= icon "question-mark-circle", class:"size-4 text-indigo-600" %>
        </div>
        <div>
          <h3 class="h6">Troubleshooting</h3>
          <p class="text-sm text-neutral-500 mt-1">Common issues and solutions</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
