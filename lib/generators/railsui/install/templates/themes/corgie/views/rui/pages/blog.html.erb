<%= render "rui/shared/marketing/nav" %>

<%= render "rui/shared/waves" %>

<div class="relative py-16 sm:py-24">
  <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="display-1">
        Blog
      </h1>
      <div class="mx-auto prose prose-xl text-center prose-neutral dark:prose-invert">
        <p>
          Insights, tutorials, and updates from the world of AI and intelligent conversation
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Featured Article -->
<div class="py-16 dark:bg-neutral-900">
  <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="container mx-auto">
      <article
        class="relative grid grid-cols-1 gap-0 overflow-hidden bg-white shadow-sm md:grid-cols-3 dark:bg-neutral-900 rounded-3xl outline-1 outline-neutral-300/60 dark:outline-neutral-700/80">
        <div class="col-span-1">
        <%= link_to rui_blog_show_path, class: "w-full h-full block" do %>
          <%= image_tag "railsui/blog-feature.jpg", class: "object-cover h-full", alt: "Featured Article" %>
        <% end %>
        </div>
        <div class="col-span-2 p-8 sm:p-12">
          <div class="flex items-center mb-4 text-sm text-neutral-500 dark:text-neutral-400">
            <span
              class="px-3 py-1 text-xs font-medium rounded-full dark:text-neutral-200 dark:bg-neutral-600">Featured</span>
            <span class="mx-2">•</span>
            <time datetime="2024-01-15">January 15, 2024</time>
            <span class="mx-2">•</span>
            <span>10 min read</span>
          </div>
          <h3 class="mb-4 h3">
            <%= link_to "The Future of AI Assistants: What's Coming Next", rui_blog_show_path, class: "transition-colors dark:text-neutral-100 text-neutral-800 dark:hover:text-white" %>
          </h3>
          <div class="mb-6 prose prose-neutral dark:prose-invert [text-wrap:balance]">
            <p>
              Explore the cutting-edge developments in AI technology and how they're shaping the next generation of
              intelligent assistants. From improved reasoning to multimodal capabilities.
            </p>
          </div>
          <div class="flex items-center">
            <%= image_tag demo_avatar_url(variant: :men, id: 31), alt: "John Rogers" %>
            <div class="ml-4">
              <p class="text-sm font-medium text-neutral-900 dark:text-neutral-100">John Rogers</p>
              <p class="text-sm text-neutral-500">AI Research Lead</p>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>

