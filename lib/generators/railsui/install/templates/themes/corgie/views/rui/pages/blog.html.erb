<!-- Newsletter Signup -->
<div class="bg-white border-t border-neutral-300/80 dark:border-neutral-700/80 dark:bg-transparent">
  <div class="px-4 py-12 mx-auto max-w-7xl sm:px-6 lg:py-16 lg:px-8 md:flex flex-wrap items-center">
    <div class="flex-1">
      <h2 class="h3 mb-3">
        Stay up to date
      </h2>
      <div class="prose prose-neutral dark:prose-invert">
        <p>
          Get the latest AI insights, tutorials, and Corgie AI updates delivered to your inbox.
        </p>
      </div>
    </div>
    <div class="mt-8 lg:mt-0 lg:ml-8">
      <form class="md:w-[400px] w-full">
        <label for="email-address" class="sr-only">Email address</label>
        <div class="flex items-center gap-4">
          <input id="email-address" name="email-address" type="email" autocomplete="email" required class="form-input"
            placeholder="Enter your email">
          <button type="submit" class="btn btn-primary py-2">
            Subscribe
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
