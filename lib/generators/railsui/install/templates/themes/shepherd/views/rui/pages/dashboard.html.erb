  <h3 class="mb-6 font-semibold text-zinc-700 dark:text-zinc-50">Resources</h3>

  <div class="grid lg:grid-cols-4 md:grid-cols-2 grid-cols-1 lg:gap-6 md:gap-4 gap-4">
    <%= link_to rui_contact_path, class: "border border-zinc-300/80 shadow-sm shadow-zinc-300/25 hover:shadow flex items-center rounded-lg px-4 py-5 space-x-3 focus:ring-4 focus:ring-zinc-100/80 group transition ease-in-out duration-200 dark:bg-zinc-800/90 dark:border-zinc-600/80 dark:focus:ring-zinc-600/30 dark:focus:border-zinc-600 dark:shadow-zinc-950/30" do %>
