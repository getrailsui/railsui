        <%= icon "tv", class: "text-zinc-500 size-6 flex-shrink-0 dark:group-hover:text-zinc-400" %>
      </div>
      <div>
        <h5 class="text-base font-medium font-heading text-zinc-700 dark:text-zinc-100 tracking-tight">Watch tutorials</h5>
        <p class="text-sm text-zinc-500 dark:text-zinc-400">Watch video tutorials to learn.</p>
      </div>
    <% end %>

    <%= link_to rui_help_center_path, class: "border border-zinc-300/80 shadow-sm shadow-zinc-300/25 hover:shadow flex items-center rounded-lg px-4 py-5 space-x-3 focus:ring-4 focus:ring-zinc-100/80 transition ease-in-out duration-200 group dark:bg-zinc-800/90 dark:border-zinc-600/80 dark:focus:ring-zinc-600/30 dark:focus:border-zinc-600 dark:shadow-zinc-950/30" do %>
