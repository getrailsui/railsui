<%%# tabs Component Examples %>

<%%# Basic tabss with panels %>
<div class="mb-8">
  <h3 class="text-lg font-semibold mb-4">Basic tabs</h3>
  <%%= rui :tabs do %>
    <%%= rui "tabs/nav", variant: :base do %>
      <%%= rui "tabs/link", label: "Activity", active: true, href: "#activity", variant: :base %>
      <%%= rui "tabs/link", label: "Account", href: "#account", variant: :base %>
      <%%= rui "tabs/link", label: "Billing", href: "#billing", variant: :base %>
      <%%= rui "tabs/link", label: "Team", href: "#team", variant: :base %>
    <%% end %>

    <%%= rui "tabs/panel", id: "activity", active: true do %>
      <p>Activity content goes here. Track your recent actions and updates.</p>
    <%% end %>

    <%%= rui "tabs/panel", id: "account" do %>
      <p>Account settings and profile information.</p>
    <%% end %>

    <%%= rui "tabs/panel", id: "billing" do %>
      <p>Billing information and payment methods.</p>
    <%% end %>

    <%%= rui "tabs/panel", id: "team" do %>
      <p>Team management and member settings.</p>
    <%% end %>
  <%% end %>
</div>

