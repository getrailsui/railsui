<%%# Custom classes example %>
<div class="mb-8">
  <h3 class="text-lg font-semibold mb-4">Custom Styling</h3>
  <%%= rui :tabs,
        classes: "bg-slate-50 dark:bg-slate-900 p-4 rounded-lg",
        active_classes: "border-b-2 border-emerald-500 text-emerald-600 font-semibold py-3 px-4",
        inactive_classes: "text-slate-500 hover:text-slate-700 py-3 px-4" do %>
    <%%= rui "tabs/nav", variant: :base, classes: "bg-transparent border-0" do %>
      <%%= rui "tabs/link", label: "Custom Active", active: true, variant: :base %>
      <%%= rui "tabs/link", label: "Custom Inactive", variant: :base %>
    <%% end %>

    <%%= rui "tabs/panel", active: true, classes: "bg-white dark:bg-slate-800 rounded-b-lg" do %>
      <p>Custom styled tabs panel with different background.</p>
    <%% end %>

    <%%= rui "tabs/panel", classes: "bg-white dark:bg-slate-800 rounded-b-lg" do %>
      <p>Another custom panel with consistent styling.</p>
    <%% end %>
  <%% end %>
</div>

