<div <%%= tag.attributes(backdrop_attributes) %>>
  <div <%%= tag.attributes(dialog_attributes) %>>
    <%% if title.present? || dismissable %>
      <%% if title.present? %>
        <h3 id="<%%= title_id %>" class="h4 mb-2">
          <%%= title %>
        </h3>
      <%% end %>

      <%% if dismissable %>
        <button
          type="button"
          class="<%%= close_button_classes %>"
          data-action="click-><%%= controller %>#close"
          aria-label="Close modal">
          <%%= icon "x-mark", class: close_icon_classes %>
        </button>
      <%% end %>
    <%% end %>

    <%%= content %>
  </div>
</div>