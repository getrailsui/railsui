<%% end %>

<div class="bg-white border-b dark:bg-slate-800/50 dark:border-b dark:border-slate-700 px-4">
  <div class="container mx-auto sm:flex flex-wrap justify-between items-center">
    <nav role="messages nav">
      <ul
        class="flex items-center justify-start sm:space-x-1 py-2 text-slate-600 sm:overflow-auto overflow-y-hidden scroll-smooth snap-start scrollbar-thin scrollbar-thumb-gray-200 scrollbar-track-gray-100/50 scrollbar-thumb-rounded">
        <li class="flex justify-center items-center sm:block">
          <%%= link_to "#", class: "py-2 px-4 bg-slate-50 dark:bg-slate-900 rounded-lg transition ease-in-out duration-300 text-indigo-600 dark:text-indigo-400 font-medium flex items-center space-x-2 dark:hover:bg-slate-900/80" do %>
            <span>Active</span>
            <span class="rounded bg-indigo-600 text-white px-1 py-px text-xs font-semibold">228</span>
          <%% end %>
        </li>
        <li class="flex justify-center items-center sm:block">
          <%%= link_to "#", class: "py-2 px-4 rounded-lg transition ease-in-out duration-300 hover:bg-slate-50 hover:text-indigo-600 dark:hover:text-indigo-400 font-medium flex items-center space-x-2 group dark:text-slate-300 dark:hover:bg-slate-900" do %>
            <span>Inactive</span>
            <span class="rounded bg-slate-200 text-slate-500 px-1 py-px text-xs font-semibold">5</span>
          <%% end %>
        </li>
      </ul>
    </nav>

    <div class="sm:flex items-center sm:space-x-4">
      <form action="#">
        <label for="people_sort" class="sr-only">Filter results</label>
        <select class="form-select text-base" id="people_sort">
          <option value="">Filter results</option>
          <option value="1">Name</option>
          <option value="1">Join Date</option>
          <option value="1">Role</option>
          <option value="1">Close sales (Highest)</option>
          <option value="1">Close sales (Lowest)</option>
        </select>
      </form>

      <div class="relative lg:w-auto w-full lg:mt-0 md:mt-0 mt-4 sm:mt-0 lg:mb-0 mb-4">
        <%%= icon "magnifying-glass", classes: "w-5 h-5 text-slate-500/90 stroke-current absolute left-3 top-3" %>
        <input type="search" placeholder="Search" class="form-input lg:w-[250px] pl-10 focus:shadow-inner">
      </div>
    </div>
  </div>
</div>

