            <%% else %>
              <%%= link_to "#" do %>
                <%%= image_tag demo_avatar_url(id: person[:img][:id], variant: person[:img][:variant]), alt: person[:name], class: "rounded-full sm:w-10 w-14 sm:h-10 h-14" %>
              <%% end %>
            <%% end %>
            <div>
              <%%= link_to person[:name], "#", class: "sm:font-medium text-slate-900 hover:text-indigo-600 sm:text-base text-lg font-semibold dark:text-slate-200" %>
              <p class="text-slate-500 text-sm"><%%= person[:username] %></p>
            </div>
          </div>
          <div class="sm:col-span-2 col-span-1">
            <p><%%= person[:date] %></p>
            <p class="text-sm text-slate-500">Join date</p>
          </div>
          <div class="sm:col-span-2 col-span-1">
            <p><%%= person[:role] %></p>
            <p class="text-sm text-slate-500">Role</p>
          </div>
          <div class="sm:col-span-2 col-span-1">
            <p><%%= person[:report] %></p>
