            <%% if respond_to?(:admin_profile_path) %>
              <%%= link_to admin_profile_path do %>
                <%%= image_tag demo_avatar_url(id: person[:img][:id], variant: person[:img][:variant]), alt: person[:name], class: "rounded-full sm:w-10 w-14 sm:h-10 h-14" %>
